<h1>Listing Access Levels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Application</th>
      <th>Ad security group</th>
      <th>Security Profiles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_levels.each do |access_level| %>
      <tr>
        <td><%= access_level.name %></td>
        <td><%= access_level.application.name %></td>
        <td><%= access_level.ad_security_group %></td>
        <td><%= access_level.security_profiles.map(&:name) %></td>
        <td><%= link_to 'Show', access_level %></td>
        <td><%= link_to 'Edit', edit_access_level_path(access_level) %></td>
        <td><%= link_to 'Destroy', access_level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
