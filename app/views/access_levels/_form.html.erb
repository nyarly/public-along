<%= form_for(@access_level, :html => {:class => "form"} ) do |f| %>
  <% if @access_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@access_level.errors.count, "error") %> prohibited this access_level from being saved:</h2>

      <ul>
      <% @access_level.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= f.label :application_id %><br>
    <%= f.collection_select :application_id, Application.all, :id, :name %>
    <%= link_to 'Add new application', new_application_path, :class => 'button' %>
    <%#= f.collection_select :application_id, Application.all, :id, :name, { :include_blank => true }, { :required => true } %>
  </div>
  <div class="field">
    <%= f.label :ad_security_group %><br>
    <%= f.text_field :ad_security_group %>
  </div>
  <div class="field">
    <%= f.label :security_profiles %><br>
    <%= f.select :security_profile_ids, SecurityProfile.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  </div>
  <div class="actions">
    <%= link_to 'Back to List', access_levels_path, :class => "button secondary" %>
    <%= f.submit "Submit", :class => "button"%>
  </div>
<% end %>
