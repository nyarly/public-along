<p id='notice'><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @location.code %>
</p>

<p>
  <strong>Status:</strong>
  <%= @location.status %>
</p>

<p>
  <strong>Kind:</strong>
  <%= @location.kind %>
</p>

<p>
  <strong>Timezone:</strong>
  <%= @location.timezone %>
</p>

<p>
  <h5>Address</h5>
  <%= render partial: 'addresses/full', locals: { address: address_for(@location) } %>
</p>

<div>
  <h5>Approvers</h5>
  <% @location.approver_designations.each do |approver| %>
    <%= render partial: 'approver_designations/display', locals: { approver: approver } %>
  <% end %>
</div>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
