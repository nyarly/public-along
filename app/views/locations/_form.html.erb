<%= form_for(@location, :html => {:class => "form"}) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, Location::STATUS, {include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label "Type" %><br>
    <%= f.select :kind, Location::KINDS, {include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.select :country, Location::COUNTRIES, {include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label :timezone %><br>
    <%= f.select :timezone, Location::TIMEZONES, {include_blank: true} %>
  </div>
  <div class="actions">
    <%= link_to 'Back to List', locations_path, :class => "button secondary" %>
    <%= f.submit "Submit", :class => "button"%>
  </div>
<% end %>
