<button class="close-button" data-close aria-label="Close modal" type="button">
  <span aria-hidden="true">&times;</span>
</button>

<h5>Create New Access Level</h5>
<%= form_tag(@access_level,
    url: access_levels_path,
    method: "post",
    remote: true,
    html: { :class => "form" }) do %>

  <% if @access_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@access_level.errors.count, "error") %> prohibited this access_level from being saved:</h2>

      <ul>
      <% @access_level.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :application_id %><br>
    <%= collection_select @access_level.application_id, :application_id, Application.all, :id, :name, { include_blank: 'Select Application' }, required: true %>
  </div>
  <div class="field">
    <%= label_tag :ad_security_group %><br>
    <%= text_field_tag :ad_security_group %>
  </div>
  <div class="actions" id="add_al_from_sp">
    <%= submit_tag "Submit", :class => "button" %>
  </div>
<% end %>
