<div id='employee-search-grp' class='employee-select-grp'>
Search Names
  <%= f.text_field(
    :search_query,
    class: 'filterrific-periodically-observed'
  ) %>
</div>
<div class='employee-select-grp'>
Department
<%= f.select(
  :with_department_id,
  @filterrific.select_options[:with_department_id],
  { include_blank: 'All' }
) %>
</div>
<div class='employee-select-grp'>
Location
<%= f.select(
  :with_location_id,
  @filterrific.select_options[:with_location_id],
  { include_blank: 'All' }
  ) %>
</div>
<div class='employee-select-grp'>
Worker Type
<%= f.select(
  :with_worker_type_id,
  @filterrific.select_options[:with_worker_type_id],
  { include_blank: 'All' }
) %>
</div>
<div class='employee-select-grp'>
Status
<%= f.select(:with_status,
  @filterrific.select_options[:with_status],
  { include_blank: 'All' }
) %>
</div>
<div class='employee-select-grp'>
<%= link_to(
  'Reset filters',
  reset_filterrific_url
) %>
</div>
<%= render_filterrific_spinner %>
