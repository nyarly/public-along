<h3>New Hires</h3>
<%= form_for_filterrific @filterrific do |f| %>
  <div>
    Location
    <%= f.select(
      :with_location_id,
      @filterrific.select_options[:with_location_id],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
    Department
    <%= f.select(
      :with_department_id,
      @filterrific.select_options[:with_department_id],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <%= render_filterrific_spinner %>
<% end %>

<%= render(partial: 'employees/new_hires/list', locals: { new_hires: @new_hires }) %>

