<%= form_for(@country, :html => {:class => "form"} ) do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
      <% @country.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "ISO Country Code (2 letters)" %><br>
    <%= f.text_field :iso_alpha_2_code %>
  </div>
  <div class="field">
    <%= f.label :currency_id %>
    <%= f.collection_select :currency_id, Currency.all, :id, :name, :include_blank => true %>
  </div>
  <div class="actions">
    <%= link_to 'Back to List', countries_path, :class => "button secondary" %>
    <%= f.submit "Submit", :class => "button"%>
  </div>
<% end %>
