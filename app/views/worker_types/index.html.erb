<h1>Listing Worker Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Kind</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worker_types.each do |worker_type| %>
      <tr>
        <td><%= worker_type.name %></td>
        <td><%= worker_type.code %></td>
        <td><%= worker_type.kind %></td>
        <td><%= worker_type.status %></td>
        <td><%= link_to 'Show', worker_type %></td>
        <td><%= link_to 'Edit', edit_worker_type_path(worker_type) %></td>
        <td><%= link_to 'Destroy', worker_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

