<p>
  <strong>Name:</strong>
  <%= @department.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @department.code %>
</p>

<p>
  <strong>Parent Org:</strong>
  <%= @department.parent_org.try(:name) %>
</p>

<p>
  <strong>Security Profiles:</strong>
  <% @department.security_profiles.each do |sp| %>
    <br><%= sp.name %>
    <ul>
      <% sp.access_levels.find_each do |al| %>
        <li class="indent-1"><small><%= al.name %> <%= al.application.name %></small></li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <strong>Machine Bundles:</strong>
  <% @department.machine_bundles.each do |mb| %>
    <br><%= mb.name %>
  <% end %>
</p>

<% if can? :update, Department %>
  <%= link_to 'Edit', edit_department_path(@department) %> |
<% end %>
<%= link_to 'Back', departments_path %>
