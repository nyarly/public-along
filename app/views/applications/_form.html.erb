<%= form_for(@application, :html => {:class => "form"} ) do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
      <% @application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.check_box :ad_controls %>
    <%= f.label :ad_controls, "Resource is controlled by Active Directory membership" %>
  </div>
  <div class="field">
    <%= f.label :dependency %><br>
    <%= f.text_area :dependency %>
  </div>
  <div class="field">
    <%= f.label :onboard_instructions %><br>
    <%= f.text_area :onboard_instructions %>
  </div>
  <div class="field">
    <%= f.label :offboard_instructions %><br>
    <%= f.text_area :offboard_instructions %>
  </div>
  <div class="actions">
    <%= link_to 'Back to List', applications_path, :class => "button secondary" %>
    <%= f.submit "Submit", :class => "button"%>
  </div>
<% end %>
