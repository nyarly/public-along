$CRED = Get-Credential
$SESSION = New-PSSession -ConfigurationName Microsoft.Exchange -ConnectionUri https://ps.outlook.com/powershell -Credential $CRED -Authentication Basic -AllowRedirection
Import-PSSession $SESSION
Connect-MsolService -Credential $CRED
Get-Mailbox -identity <%= @employee.email %> | set-mailbox -type "Shared"
Set-Mailbox -identity <%= @employee.email%> -DeliverToMailboxAndForward $true -ForwardingAddress <%= @info.forward_email %>
Set-MsolUserLicense -UserPrincipalName <%= @employee.email %> -RemoveLicenses "opentable:ENTERPRISEPACK"
Add-MailboxPermission <%= @employee.email %> -User "<%= @info.forward_email %>" -AccessRights FullAccess
